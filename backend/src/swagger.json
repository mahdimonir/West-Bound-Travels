{
  "openapi": "3.0.0",
  "info": {
    "title": "West Bound Travels API",
    "version": "1.0.0",
    "description": "RESTful API for West Bound Travels - Luxury Houseboat Booking System",
    "contact": {
      "name": "API Support",
      "email": "mahdimoniruzzaman@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Development server"
    },
    {
      "url": "https://api.westboundtravels.com/api/v1",
      "description": "Production server"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "Error message"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object"
          }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "data": {
            "type": "object",
            "properties": {
              "user": {
                "$ref": "#/components/schemas/User"
              },
              "token": {
                "type": "string"
              }
            }
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "clxxx123456"
          },
          "name": {
            "type": "string",
            "example": "John Doe"
          },
          "email": {
            "type": "string",
            "example": "john@example.com"
          },
          "phone": {
            "type": "string",
            "nullable": true,
            "example": "+8801234567890"
          },
          "role": {
            "type": "string",
            "enum": ["CUSTOMER", "MODERATOR", "ADMIN"],
            "example": "CUSTOMER"
          },
          "isVerified": {
            "type": "boolean",
            "example": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Boat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Luxury Houseboat 1"
          },
          "type": {
            "type": "string",
            "enum": ["AC", "NON_AC"],
            "example": "AC"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "features": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": ["WiFi", "Kitchen", "AC"]
          },
          "totalRooms": {
            "type": "integer",
            "example": 7
          },
          "rooms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "count": { "type": "integer" },
                "maxPax": { "type": "integer" },
                "attachBath": { "type": "boolean" },
                "balcony": { "type": "boolean" }
              },
              "example": {
                "type": "AC with Balcony/Attach Bath",
                "count": 4,
                "maxPax": 4,
                "attachBath": true,
                "balcony": true
              }
            }
          },
          "description": { "type": "string", "nullable": true },
          "isActive": {
            "type": "boolean",
            "example": true
          }
        }
      },
      "Booking": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "boatId": {
            "type": "string"
          },
          "startDate": {
            "type": "string",
            "format": "date-time"
          },
          "endDate": {
            "type": "string",
            "format": "date-time"
          },
          "pax": {
            "type": "integer",
            "example": 4
          },
          "roomsBooked": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string"
                },
                "quantity": {
                  "type": "integer"
                }
              }
            }
          },
          "placesVisited": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 5,
            "maxItems": 5
          },
          "totalPrice": {
            "type": "number",
            "format": "decimal"
          },
          "status": {
            "type": "string",
            "enum": ["PENDING", "CONFIRMED", "PAID", "CANCELLED", "REFUNDED"],
            "example": "PENDING"
          },
          "paymentId": {
            "type": "string",
            "nullable": true
          },
          "paymentMethod": {
            "type": "string",
            "enum": ["bkash", "sslcommerz"],
            "nullable": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "boatId": {
            "type": "string"
          },
          "bookingId": {
            "type": "string"
          },
          "rating": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5,
            "example": 5
          },
          "comment": {
            "type": "string",
            "example": "Amazing experience! Highly recommended."
          },
          "isActive": {
            "type": "boolean",
            "example": true
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Notification": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "userId": {
            "type": "string"
          },
          "title": {
            "type": "string",
            "example": "Booking Confirmed"
          },
          "message": {
            "type": "string",
            "example": "Your booking has been confirmed"
          },
          "read": {
            "type": "boolean",
            "example": false
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "StaticPage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "slug": {
            "type": "string",
            "example": "about-us"
          },
          "title": {
            "type": "string",
            "example": "About Us"
          },
          "content": {
            "type": "string",
            "example": "<h1>About West Bound Travels</h1><p>Content here...</p>"
          },
          "lastUpdated": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Destination": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string",
            "example": "Tanguar Haor"
          },
          "description": {
            "type": "string"
          },
          "images": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Gallery": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "src": { "type": "string" },
          "alt": { "type": "string", "nullable": true },
          "category": {
            "type": "string",
            "enum": ["BOAT", "DESTINATION", "NATURE", "CULCTURE"]
          },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "tags": ["Health"],
        "summary": "Health check endpoint",
        "responses": {
          "200": {
            "description": "Server is healthy"
          }
        }
      }
    },
    "/gallery": {
      "get": {
        "tags": ["Gallery"],
        "summary": "List gallery items",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessResponse" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Gallery"],
        "summary": "Create gallery item (admin)",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "src": { "type": "string" },
                  "imageLocalPath": { "type": "string" },
                  "alt": { "type": "string" },
                  "category": {
                    "type": "string",
                    "enum": ["BOAT", "DESTINATION", "NATURE", "CULCTURE"]
                  }
                },
                "required": ["category"]
              }
            }
          }
        },
        "responses": { "201": { "description": "Created" } }
      }
    },
    "/gallery/{id}": {
      "delete": {
        "tags": ["Gallery"],
        "summary": "Delete gallery item (admin)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": { "200": { "description": "Deleted" } }
      }
    },
    "/users/me/avatar": {
      "post": {
        "tags": ["Users"],
        "summary": "Upload or update current user's avatar",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "imageLocalPath": { "type": "string" },
                  "imageUrl": { "type": "string" }
                }
              }
            }
          },
          "responses": { "200": { "description": "OK" } }
        }
      },
      "/auth/register": {
        "post": {
          "tags": ["Authentication"],
          "summary": "Register a new user",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["name", "email", "password"],
                  "properties": {
                    "name": {
                      "type": "string",
                      "minLength": 2,
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "format": "email",
                      "example": "john@example.com"
                    },
                    "password": {
                      "type": "string",
                      "minLength": 6,
                      "example": "password123"
                    },
                    "phone": {
                      "type": "string",
                      "example": "+8801234567890"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "User registered successfully"
            },
            "400": {
              "description": "Bad request"
            }
          }
        }
      },
      "/auth/login": {
        "post": {
          "tags": ["Authentication"],
          "summary": "Login user",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["email", "password"],
                  "properties": {
                    "email": {
                      "type": "string",
                      "format": "email",
                      "example": "john@example.com"
                    },
                    "password": {
                      "type": "string",
                      "example": "password123"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Login successful"
            },
            "401": {
              "description": "Invalid credentials"
            }
          }
        }
      },
      "/users/me": {
        "get": {
          "tags": ["Users"],
          "summary": "Get current user profile",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "User profile"
            },
            "401": {
              "description": "Unauthorized"
            }
          }
        },
        "put": {
          "tags": ["Users"],
          "summary": "Update current user profile",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "phone": {
                      "type": "string"
                    },
                    "bio": {
                      "type": "string"
                    },
                    "preferences": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Profile updated"
            }
          }
        }
      },
      "/users/admin/all": {
        "get": {
          "tags": ["Users", "Admin"],
          "summary": "Get all users (Admin only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "limit",
              "in": "query",
              "schema": {
                "type": "integer",
                "example": 10
              }
            },
            {
              "name": "offset",
              "in": "query",
              "schema": {
                "type": "integer",
                "example": 0
              }
            },
            {
              "name": "role",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": ["CUSTOMER", "MODERATOR", "ADMIN"]
              }
            },
            {
              "name": "search",
              "in": "query",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of users"
            }
          }
        }
      },
      "/users/admin/admins": {
        "get": {
          "tags": ["Users", "Admin"],
          "summary": "Get all admins and moderators (Admin only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "List of admins"
            }
          }
        }
      },
      "/users/admin/{userId}/role": {
        "patch": {
          "tags": ["Users", "Admin"],
          "summary": "Update user role (Admin only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "userId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["role"],
                  "properties": {
                    "role": {
                      "type": "string",
                      "enum": ["CUSTOMER", "MODERATOR", "ADMIN"],
                      "example": "MODERATOR"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Role updated"
            }
          }
        }
      },
      "/boats": {
        "get": {
          "tags": ["Boats"],
          "summary": "Get all boats",
          "parameters": [
            {
              "name": "type",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": ["AC", "NON_AC"]
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of boats"
            }
          }
        }
      },
      "/boats/{id}": {
        "get": {
          "tags": ["Boats"],
          "summary": "Get boat by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Boat details"
            },
            "404": {
              "description": "Boat not found"
            }
          }
        }
      },
      "/destinations": {
        "get": {
          "tags": ["Destinations"],
          "summary": "Get all destinations",
          "responses": {
            "200": {
              "description": "List of destinations"
            }
          }
        }
      },
      "/bookings": {
        "post": {
          "tags": ["Bookings"],
          "summary": "Create a new booking",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "boatId",
                    "startDate",
                    "endDate",
                    "pax",
                    "roomsBooked",
                    "placesVisited"
                  ],
                  "properties": {
                    "boatId": {
                      "type": "string",
                      "example": "clxxx123456"
                    },
                    "startDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-25T00:00:00Z"
                    },
                    "endDate": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2024-12-27T00:00:00Z"
                    },
                    "pax": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 30,
                      "example": 4
                    },
                    "roomsBooked": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "object",
                        "required": ["type", "quantity"],
                        "properties": {
                          "type": {
                            "type": "string",
                            "example": "AC"
                          },
                          "quantity": {
                            "type": "integer",
                            "minimum": 1,
                            "example": 2
                          }
                        }
                      }
                    },
                    "placesVisited": {
                      "type": "array",
                      "minItems": 5,
                      "maxItems": 5,
                      "items": {
                        "type": "string"
                      },
                      "example": [
                        "Tanguar Haor",
                        "Ratargul",
                        "Jaflong",
                        "Srimangal",
                        "Sylhet"
                      ]
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Booking created"
            },
            "400": {
              "description": "Bad request"
            },
            "409": {
              "description": "Booking conflict - rooms not available"
            }
          }
        }
      },
      "/bookings/my": {
        "get": {
          "tags": ["Bookings"],
          "summary": "Get current user's bookings",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "responses": {
            "200": {
              "description": "List of user bookings"
            }
          }
        }
      },
      "/bookings/{id}": {
        "get": {
          "tags": ["Bookings"],
          "summary": "Get booking by ID",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Booking details"
            },
            "404": {
              "description": "Booking not found"
            }
          }
        }
      },
      "/bookings/admin/all": {
        "get": {
          "tags": ["Bookings", "Admin"],
          "summary": "Get all bookings (Admin/Moderator only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "limit",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "offset",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "status",
              "in": "query",
              "schema": {
                "type": "string",
                "enum": [
                  "PENDING",
                  "CONFIRMED",
                  "PAID",
                  "CANCELLED",
                  "REFUNDED"
                ]
              }
            },
            {
              "name": "userId",
              "in": "query",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of bookings"
            }
          }
        }
      },
      "/bookings/admin/{id}/status": {
        "patch": {
          "tags": ["Bookings", "Admin"],
          "summary": "Update booking status (Admin/Moderator only)",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["status"],
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "PENDING",
                        "CONFIRMED",
                        "PAID",
                        "CANCELLED",
                        "REFUNDED"
                      ],
                      "example": "CONFIRMED"
                    },
                    "message": {
                      "type": "string",
                      "example": "Booking confirmed successfully"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Status updated"
            }
          }
        }
      },
      "/reviews/boat/{boatId}": {
        "get": {
          "tags": ["Reviews"],
          "summary": "Get reviews for a boat",
          "parameters": [
            {
              "name": "boatId",
              "in": "path",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "limit",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "offset",
              "in": "query",
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "List of reviews with average rating"
            }
          }
        }
      },
      "/reviews": {
        "post": {
          "tags": ["Reviews"],
          "summary": "Create a review",
          "security": [
            {
              "bearerAuth": []
            }
          ],
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": ["bookingId", "rating", "comment"],
                  "properties": {
                    "bookingId": {
                      "type": "string",
                      "example": "clxxx123456"
                    },
                    "rating": {
                      "type": "integer",
                      "minimum": 1,
                      "maximum": 5,
                      "example": 5
                    },
                    "comment": {
                      "type": "string",
                      "minLength": 10,
                      "maxLength": 1000,
                      "example": "Amazing experience! Highly recommended."
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Review created"
            },
            "400": {
              "description": "Bad request"
            },
            "404": {
              "description": "Booking not found or not eligible"
            }
          }
        }
